generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id            Int    @id @default(autoincrement())
  calories      Float
  header        String
  description   String
  demonstration String

  set       Set        @relation(fields: [setId], references: [id])
  setId     Int
  bodyParts BodyPart[]
  type      Type[]
  histories History[]
}

model Set {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  image       String

  exercises Exercise[]
  users     User[]
  // users UsersSets[]
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  dificulty Dificulty
  height    Int
  weight    Int
  goal      Int // end weight

  sets      Set[]
  histories History[]
  // sets UsersSets[]
}

model BodyPart {
  id    Int    @id @default(autoincrement())
  value String @unique

  exercises Exercise[]
}

model Type {
  id    Int    @id @default(autoincrement())
  value String @unique

  exercises Exercise[]
}

model History {
  completedAt DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId Int

  @@id([userId, exerciseId])
}

